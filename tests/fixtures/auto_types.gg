struct Vec2:
    float x
    float y

equip Vec2:
    float sum(self):
        return self.x + self.y

void main():
    auto n = 42
    auto greeting = "hello"
    auto pi = 3.14
    auto flag = true
    auto ch = 'A'

    print("{n}")
    print("{greeting}")
    print("{pi}")
    print("{flag}")
    print("{ch}")

    auto sum = n + 8
    print("{sum}")

    auto msg = "world"
    print("{greeting} {msg}")

    const auto limit = 100
    print("{limit}")

    auto v = Vec2(1.0, 2.0)
    float vsum = v.sum()
    print("auto struct")

    int base = 10
    auto add_base = (int y): base + y
    int result = add_base(5)
    print("{result}")
    print("auto closure")
